@model IEnumerable<Shop.Models.Product>

@{
    ViewData["Title"] = "Admin Panel";
}


<div class="container">
    <h1 class="display-4 mb-4">Admin Panel</h1>

    <p>
        <a asp-action="Create" asp-controller="Product" class="btn btn-primary">Create New Product</a>
    </p>

    @if (!string.IsNullOrEmpty(ViewBag.DeleteConfirmation))
    {
        <div class="alert alert-success">
            @ViewBag.DeleteConfirmation
        </div>
        <script>
            setTimeout(function () {
                $(".alert").fadeOut(1000);
            }, 3000);
        </script>
    }

    <div class="table-responsive">
        <table class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Image</th>
                    <th>Product ID</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Stock Quantity</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <partial name="_ProductCardPartial" model="product" />
                }
            </tbody>
        </table>
    </div>
</div>


@foreach (var product in Model)
{
    <div class="modal fade" id="DeleteProductModal-@product.ProductId" tabindex="-1" role="dialog" aria-labelledby="DeleteProductModal" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Delete Product</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p class="text-danger">Are you sure you want to delete this product?</p>
                </div>
                <div class="modal-footer">
                    <form method="post" action="@Url.Action("Delete", "Product", new { id = product.ProductId })">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}

