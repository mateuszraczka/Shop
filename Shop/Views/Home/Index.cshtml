@{
    ViewData["Title"] = "Home";
}

@model List<Product>

<main class="container">
    <h1 class="display-4 mb-4">Welcome to My Shop</h1>

    <div class="row">
        <div class="flex-xl-wrap">
            <form method="get" class="form-inline mb-3" asp-controller="Home" asp-action="Filter">
                <div class="row">
                    <div class="form-group col-md-3">
                        <label for="nameFilter" class="mr-2">Name:</label>
                        <input type="text" id="nameFilter" name="productName" class="form-control" placeholder="Filter by name">
                    </div>
                    <div class="form-group col-md-3 mt-auto">
                        <input type="submit" class="btn btn-primary" value="Apply Filters" />
                    </div>
                    <div class="form-group col-md-3 mt-auto ml-2">
                        <input type="reset" class="btn btn-secondary" value="Reset filters" />
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="row mt-4">
        @foreach (var product in Model)
        {
            <partial name="_ProductCardPartial" model="product" />
        }
    </div>
</main>
