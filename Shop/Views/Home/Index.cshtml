@{
    ViewData["Title"] = "Home";
}

@model List<Product>

@{
    string categoryFilter = Context.Request.Query["category"];
    string nameFilter = Context.Request.Query["name"];
    string nameFilterLower = nameFilter?.ToLower();
}

<main class="container">
    <h1 class="display-4 mb-4">Welcome to My Shop</h1>

    <div class="row">
        <div class="col-md-12">
            <form method="get" class="form-inline mb-3">
                <div class="row">
                    <div class="form-group col-md-3">
                        <label for="categoryFilter" class="mr-2">Category:</label>
                        <input type="text" id="categoryFilter" name="category" class="form-control" value="@categoryFilter" placeholder="Filter by category">
                    </div>
                    <div class="form-group col-md-3">
                        <label for "nameFilter" class="mr-2">Name:</label>
                        <input type="text" id="nameFilter" name="name" class="form-control" value="@nameFilter" placeholder="Filter by name">
                    </div>
                    <div class="form-group col-md-3 mt-auto">
                        <button type="submit" class="btn btn-primary">Apply Filters</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="row mt-4">
        @foreach (var product in Model)
        {
            <partial name="_ProductCardPartial" model="product" />
        }
    </div>
</main>
